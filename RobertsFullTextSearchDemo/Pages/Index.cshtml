@page
@model IndexModel
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Robert's FullText Search Demo</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.1.0/css/bootstrap.min.css" integrity="sha512-F7WyTLiiiPqvu2pGumDR15med0MDkUIo5VTVyyfECR5DZmCnDhti9q5VID02ItWjq6fvDfMaBaDl2J3WdL1uxA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="shortcut icon" href="~/favicon.ico">
</head>
<body>

    <div class="container">
        <main role="main" class="pb-3">

            <form method="post">
                <h1 class="text-center">Robert's Full Text Search Demo</h1>
                <p>
                    This library translates a Google like search query into an SQL Server
                    <a href="https://docs.microsoft.com/en-us/sql/t-sql/queries/contains-transact-sql?view=sql-server-ver15">CONTAINS(..)</a>
                    query. By default individual words are AND'd, unless an explicit OR is used.
                    Quoted words means and exact match. Words prefixed with a minus sign are exclusions.
                </p>
                <dl>
                    <dt>Exclude words from your search</dt>
                    <dd>Put - in front of a word you want to leave out. For example, jaguar speed -car</dd>

                    <dt>Search for an exact match</dt>
                    <dd>Put a word or phrase inside quotes. For example, "tallest building".</dd>

                    <dt>Combine searches</dt>
                    <dd>Put "OR" between each search query. For example, marathon OR race.</dd>

                    <dt>Exclude an exact match from your search</dt>
                    <dd>Put - in front of the exact match you want to leave out. For example, big cats -"sand cats"</dd>

                </dl>
                <div class="row">
                    <div class="col mb-3">
                        <label for="exampleFormControlInput1" class="form-label fw-bold">Search for</label>
                        <input type="text" class="form-control" id="SearchFor" name="SearchFor" placeholder="Enter a Google-like search" value="@Model.SearchFor" />
                    </div>
                </div>
                <div class="row">
                    <div class="col-4 offset-4 mb-3">
                        <button type="submit" class="btn btn-primary w-100">Translate to SQL</button>
                    </div>
                </div>
                @if (Model.HaveResult)
                {
                    <div class="row">
                        <div class="col pt-2">
                            <label class="form-label fw-bold">SQL Query</label>
                            <pre class="w-100 border p-2">@Model.Result</pre>
                        </div>
                    </div>
                }
            </form>
        </main>
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.1.0/js/bootstrap.bundle.min.js" integrity="sha512-PqRelaJGXVuQ81N6wjUrRQelCDR7z8RvKGiR9SbSxKHPIt15eJDmIVv9EJgwq0XvgylszsjzvQ0+VyI2WtIshQ==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
</body>
</html>